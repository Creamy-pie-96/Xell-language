{
  "comments": {
    "lineComment": "#",
    "blockComment": ["-->", "<--"]
  },
  "brackets": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*.*:\\s*$",
      "end": "^\\s*;\\s*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(fn|if|elif|else|for|while)\\b.*:\\s*(#.*)?$",
    "decreaseIndentPattern": "^\\s*(;|elif\\b|else\\b).*"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(fn|if|elif|else|for|while)\\b.*:\\s*(#.*)?$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*;\\s*$",
      "action": {
        "indent": "outdent"
      }
    }
  ],
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
